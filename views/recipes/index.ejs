<%- include('../partials/header') %>

<title>Recipes</title>

<table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Ingredients</th>
        <th>Steps</th>
        <th>Details</th>
      </tr>
    </thead>
    <tbody>
        <ul>
        <% recipes.forEach(function(r) { %>
            <li>
                <tr>
                    <td><%= r.title %></td>
                    <td><%= r.ingredients.join(', ') %></td>
                    <td><%= r.steps.join(', ') %></td>
                    <td><a href="/recipes/recipe/show">View Recipe</a></td>
                </tr>
            </li>
        <% }); %>
        </ul>
    </tbody>
</table>
<a href="/recipes/new">Add Recipe</a>
  
